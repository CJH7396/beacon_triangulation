<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hyeonseob.beacontriangulation.ConfigurationActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Confidence Interval"
        android:id="@+id/showConfidenceIntervalButton"
        android:layout_below="@+id/rangingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="onButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Map"
        android:id="@+id/showMapButton"
        android:layout_marginTop="40dp"
        android:onClick="onButtonClicked"
        android:layout_below="@+id/showConfidenceIntervalButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measure RSS"
        android:id="@+id/measureRSSButton"
        android:onClick="onButtonClicked"
        android:layout_below="@+id/showMapButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
